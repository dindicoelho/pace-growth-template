FROM node:20-alpine

WORKDIR /app

RUN apk add --no-cache libc6-compat

# Install pnpm
RUN corepack enable pnpm

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install dependencies
RUN pnpm install

# Copy application
COPY . .

# Generate Prisma client
RUN npx prisma generate

EXPOSE 3000

CMD ["pnpm", "dev"]